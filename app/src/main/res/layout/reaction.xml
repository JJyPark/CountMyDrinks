<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="36sp"
        android:text="Time"
        android:id="@+id/textView2"/>

    <TextView
        android:id="@+id/timeCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36sp"
        android:text="00:00:00"
        android:gravity="center"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/promptText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap screen to start reaction game."
        android:gravity="center"
        android:textSize="30sp"
        android:layout_below="@+id/timeCountText"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/baselineLayout"/>

    <LinearLayout
        android:id="@+id/baselineLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Baseline: "
            android:textSize="20dp"
            android:layout_weight="3"
            />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Set Baseline"/>

    </LinearLayout>

</RelativeLayout>